{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": false,
		"strict": true,
		"esModuleInterop": true,
        "lib": ["es2015", "es2017", "dom"],
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": ".",
		 "types": ["node"],
		"resolveJsonModule": true
	},
	"include": [
		"**/*.ts",
		"./ts/vendor.d.ts"
	],
	"typeRoots": [
		"./node_modules/@types",
  		"./ts"
	],
	"exclude": [
	   "node_modules",
	   "@schemas/*",
	   "coverage"
   ]
}
